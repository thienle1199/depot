= form_tag root_path, method: :get, class: 'locale' do
  = select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale), onchange: 'this.form.submit()'
  = submit_tag 'submit'
  = javascript_tag "$('.locale input').hide()"
= image_tag 'logo', alt: 'The Pragmatic Bookshelf'
%span.title= @page_title