- unless cart.line_items.empty?
    %h2= t('.title')
    %table
        = render cart.line_items
        %tr.total_line
            %td{ colspan: "2"} Total
            %td.total_cell= number_to_currency(cart.total_price)
    - unless current_page?(new_order_path)
        = button_to t('.checkout'), new_order_path, method: :get
    = button_to t('.empty'), cart_path(cart, locale: I18n.locale), method: :delete, data: {confirm: 'Are you sure?'}, remote: true