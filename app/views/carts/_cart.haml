- unless cart.line_items.empty?
    %h2 Your Pragmatic Cart
    %table
        = render cart.line_items
        %tr.total_line
            %td{ colspan: "2"} Total
            %td.total_cell= number_to_currency(cart.total_price)
    - unless current_page?(new_order_path)
        = button_to 'Check out', new_order_path, method: :get
    = button_to 'Empty cart', cart, method: :delete, data: {confirm: 'Are you sure?'}, remote: true